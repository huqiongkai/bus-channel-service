<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="bus-channel-ws" version="2.5">
  <display-name>bus-channel-ws</display-name>
  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>BusChannelWs.root</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:conf/applicationContext.xml</param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:conf/log4j.properties</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>ChannelServiceV2Thrift</servlet-name>
    <servlet-class>com.shbus.easybus.web.ChannelServiceV2ThriftServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ChannelServiceV2JsonThrift</servlet-name>
    <servlet-class>com.shbus.easybus.web.ChannelServiceV2JsonThriftServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TJsonServlet</servlet-name>
    <servlet-class>com.shbus.easybus.web.TJsonServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TJsonServlet</servlet-name>
    <url-pattern>/servlet/TJsonServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChannelServiceV2Thrift</servlet-name>
    <url-pattern>/servlet/ChannelServiceThriftServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChannelServiceV2JsonThrift</servlet-name>
    <url-pattern>/servlet/ChannelServiceJsonThriftServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ApplicationConfServlet</servlet-name>
    <servlet-class>com.shbus.easybus.web.ApplicationConfServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ApplicationConfServlet</servlet-name>
    <url-pattern>/back/ApplicationConfServlet</url-pattern>
  </servlet-mapping>
</web-app>